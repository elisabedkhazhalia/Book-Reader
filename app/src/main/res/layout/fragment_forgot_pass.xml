<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".Fragments.ForgotPassFragment">



    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/emailInp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whiteNew"
            android:textColorHint="@color/whiteNew"
            android:hint="Email"
            android:padding="16dp"

            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <Button
            android:backgroundTint="@color/brown"
            android:id="@+id/reset_button"
            android:textStyle="bold"
            android:textColor="@color/whiteNew"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/whiteNew"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/inputs_container"
        app:layout_constraintTop_toBottomOf="@+id/inputs_container"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/whiteNew"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/inputs_container"
        app:layout_constraintTop_toBottomOf="@+id/inputs_container"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>